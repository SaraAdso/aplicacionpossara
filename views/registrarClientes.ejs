<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>

<body>
  <%- include ('parcials/navbar')%>
    <section class="h-100 gradient-form" style="background-color: rgb(184, 184, 184);">
      <div id="alertaexito" class="alert alert-success" role="alert" style="display: none;">
        Registrado exitosamente!
      </div>
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-xl-10">
            <div class="card rounded-3 text-black" style="background-color: rgb(20, 20, 20);">
              <div class="row g-0">
                <div class="col-lg-6">
                  <div class="card-body p-md-5 mx-md-4">

                    <div class="text-center">
                      <img src="https://www.pngplay.com/wp-content/uploads/13/Versace-Logo-Free-PNG.png"
                        style="width: 185px;" alt="modelos">
                      <h6 style="color: white;">¿Eres un nuevo cliente?</h6><br>
                    </div>

                    <form onsubmit="return validarContrasena()" action="registrar" method="post">
                      <div class="form-outline mb-4">
                        <div class="form-outline mb-4 col-md-6 d-flex justify-content-between w-100">
                          <input type="text" id="nombreregist" class="form-control me-1" placeholder="Nombre"
                            name="nomregistrar" required/> <br>
                          <input type="text" id="apellidoregist" class="form-control ms-1" placeholder="Apellido"
                            name="aperegistrar" required /> <br>
                        </div>
                        <input type="text" id="telefonoregist" class="form-control" placeholder="Teléfono/Celular"
                          name="telregistrar" required> <br>
                        <input type="email" id="emailregist" class="form-control" placeholder="Correo electrónico"
                          name="correoregistrar" required><br>
                        <div class="form-outline mb-4 col-md-6 d-flex justify-content-between w-100">
                          <input type="password" id="contrasenaregist" class="form-control me-1"
                            placeholder="Contraseña" name="contregistrar" required><br>
                          <i class="bi bi-eye btn btn-outline-warning" type="button" onclick="mostrarContrasena()"></i>
                          <input type="password" id="confirmregist" class="form-control ms-1"
                            placeholder="Confirmar contraseña" name="confirmregistrar" required>
                        </div>
                      </div>
                      <div id="alerta" class="alert alert-warning" role="alert" style="display: none;">
                        Las contraseñas no coinciden. Por favor, inténtalo de nuevo.
                      </div>


                      <div class="text-center">
                        <button type="submit" class="btn btn-outline-warning m-3" onclick="validarContrasena()">CREAR</button>
                      </div>

                    </form>

                  </div>
                </div>
                <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                  <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                    <img
                      src="https://karibik.vtexassets.com/assets/vtex.file-manager-graphql/images/172cb94c-9bd8-44a9-9243-3d077c50dafc___a2a6f2e08fc01cac8bcdea3c9839ddb4.jpg"
                      alt="modelo registro" width="100%" class="rounded-2">
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <script>
      function validarContrasena(){
        const contra1 = document.getElementById('contrasenaregist').value;
        const contra2 = document.getElementById('confirmregist').value;
        const alertaIncorrecto = document.getElementById('alerta');
        const alertaExito = document.getElementById("alertaexito");


        if (contra1 == contra2) {
          console.log("Contraseñas coinciden");
          alertaIncorrecto.style.display = "none"; // Ocultar la alerta si las contraseñas coinciden
          alertaExito.style.display = "block"
          return true;
        } else {
          console.log("no coinciden");
          alertaIncorrecto.style.display = "block"; // Muestra la alerta si las contraseñas no coinciden
          alertaExito.style.display = "none";
          return false;
        }
      }

      function mostrarContrasena() {
        let tipo = document.getElementById("contrasenaregist");
        let tipo2 = document.getElementById("confirmregist")
        if (tipo.type == 'password') {
          tipo.type = 'text';
        } else {
          tipo.type = 'password'
        }
      }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
      crossorigin="anonymous"></script>

</body>

</html>