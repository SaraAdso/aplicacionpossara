<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
  </head>
</head>

<body>

  <%- include ('parcials/navbarAdmin')%>
    <div class="mb-3 m-5">
        <form action="crearProductos" method="post">
        <label for="ref" class="form-label">Referencia:</label>
        <input type="text" name="campoRef" class="form-control" id="ref" placeholder="ingrese la referencia" >

        <label for="nom" class="form-label">Nombre:</label>
        <input type="text" name="campoNombre" class="form-control" id="nom" placeholder="ingrese el nombre" >

        <label for="desc" class="form-label">Descripción:</label>
        <input type="text" name="campoDescripcion" class="form-control" id="desc" placeholder="ingrese la descripción" >

        <label for="stock" class="form-label">Stock:</label>
        <input type="text" name="campoStock" class="form-control" id="stock" placeholder="ingrese el stock">

        <label for="precio" class="form-label">Precio:</label>
        <input type="text" name="campoPrecio" class="form-control" id="precio" placeholder="ingrese el precio">

        <label for="estado">Habilitado:</label>
        <input type="text" name="campoEstado" class="form-control" id="estado" placeholder="Yes/No">

        <input type="submit" class="btn btn-secondary m-5" value="Enviar"> 
    </form> 
    </div>




    <table class="table table-striped table-bordered m-5 width:100%">
        <thead>
          <tr>
            <th scope="col">Referencia</th>
            <th scope="col">Nombre</th>
            <th scope="col">Descripción</th>
            <th scope="col">Stock</th>
            <th scope="col">Precio</th>
            <th scope="col">Habilitado</th>
            <th scope="col">Opciones</th>
          </tr>
        </thead>
        <tbody>
            <% productos.forEach(function(productitos){ %>
          <tr>
            <td><%=productitos.referencia%></td>
            <td><%=productitos.nombre%></td>
            <td><%=productitos.descripcion%></td>
            <td><%=productitos.stock%></td>
            <td><%=productitos.precio%></td>
            <td><%=productitos.habilitado%></td>
            <td><button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#modalact" onclick="llenar(`<%=productitos._id%>`, `<%=productitos.referencia%>`, `<%=productitos.nombre%>`, `<%=productitos.descripcion%>`,`<%=productitos.precio%>`,`<%=productitos.stock%>`,`<%=productitos.habilitado%>`)">
                Editar
              </button>
              <a href="eliminarProductos/<%=productitos._id%>">Eliminar</a>
            </td>

          </tr>
          <% })%>
        </tbody>
      </table>


      <!-- Button trigger modal -->

  
  <!-- Modal -->
  <div class="modal fade" id="modalact" tabindex="-1" aria-labelledby="modalactLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Modificar producto</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="actualizarProductos" method="POST">
            
            <label for="idact">Id:</label>
            <input type="text" name="campoId" class="form-control" id="idact" placeholder="" readonly>

            <label for="ref" class="form-label">Referencia:</label>
            <input type="text" name="campoRefact" class="form-control" id="refact" placeholder="ingrese la referencia" >
    
            <label for="nom" class="form-label">Nombre:</label>
            <input type="text" name="campoNombreact" class="form-control" id="nomact" placeholder="ingrese el nombre" >
    
            <label for="desc" class="form-label">Descripción:</label>
            <input type="text" name="campoDescripcionact" class="form-control" id="descact" placeholder="ingrese la descripción" >
    
            <label for="stock" class="form-label">Stock:</label>
            <input type="text" name="campoStockact" class="form-control" id="stockact" placeholder="ingrese el stock">
    
            <label for="precio" class="form-label">Precio:</label>
            <input type="text" name="campoPrecioact" class="form-control" id="precioact" placeholder="ingrese el precio">
    
            <label for="estado">Habilitado:</label>
            <input type="text" name="campoEstadoact" class="form-control" id="estadoact" placeholder="Si/No">
    
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
          <button type="submit" class="btn btn-primary" >Actualizar cambios</button>
        </div>
      </form>
      </div>
    </div>
  </div>
  
  <script>
    function llenar(id,ref,nombre,descripcion,precio,stock,estado){
      idact.value = id;
      refact.value = ref;
      nomact.value = nombre;
      descact.value = descripcion;
      precioact.value = precio;
      stockact.value = stock;
      estadoact.value = estado;
    }


  </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

  </body>

</html>